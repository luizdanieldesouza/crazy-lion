.plan
	position relative
	width 100%
	overflow hidden
	background #fff

	&--layer_1
		width 100%
		position absolute
		left 0
		bottom 0
		z-index 5
		translateZ(0);
	&--layer_2
		width 100%
		position absolute
		left 0
		bottom 0
		z-index 4
		translateZ(0);

	&--mountains
		width 100%
		height 338px
		position absolute
		left 0
		bottom 0
		z-index 3
		background url('./i/plans/common/normal/mountains.png') center bottom no-repeat


	&--clouds
		position absolute
		left 0
		width 100%
		height 4000px
		background url('./i/plans/common/normal/clouds.png') top center repeat-y
		z-index 2

	&--sun
		position absolute
		top 0
		bottom 0
		height 100%
		left 50%
		margin 0 0 0 -500px
		width 1000px
		z-index 1
		&:before
			width 200px
			height 200px
			content ''
			position absolute
			top 0
			background url('./i/plans/common/normal/sun.png') top center repeat-y

	&--bg_gradient 
		position absolute
		top 0
		bottom 0
		width 100%
		// opacity .48
		background url('data:image/svg+xml;base64,')
		background -moz-linear-gradient(top,  rgba(164,181,247,0.48) 0%, rgba(69,211,255,0.31) 51%, rgba(69,211,255,0.21) 81%, rgba(255,236,0,0.15) 100%)
		background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(164,181,247,0.48)), color-stop(51%,rgba(69,211,255,0.31)), color-stop(81%,rgba(69,211,255,0.21)), color-stop(100%,rgba(255,236,0,0.15)))
		background -webkit-linear-gradient(top,  rgba(164,181,247,0.48) 0%,rgba(69,211,255,0.31) 51%,rgba(69,211,255,0.21) 81%,rgba(255,236,0,0.15) 100%)
		background -o-linear-gradient(top,  rgba(164,181,247,0.48) 0%,rgba(69,211,255,0.31) 51%,rgba(69,211,255,0.21) 81%,rgba(255,236,0,0.15) 100%)
		background -ms-linear-gradient(top,  rgba(164,181,247,0.48) 0%,rgba(69,211,255,0.31) 51%,rgba(69,211,255,0.21) 81%,rgba(255,236,0,0.15) 100%)
		background linear-gradient(to bottom,  rgba(164,181,247,0.48) 0%,rgba(69,211,255,0.31) 51%,rgba(69,211,255,0.21) 81%,rgba(255,236,0,0.15) 100%)




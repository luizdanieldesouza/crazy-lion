@import './common/reset'
@import './common/mixins'
@import './common/globals'
@import './common/base'


// VENDOR
@import './blocks/footer'

@import './blocks/plan'

html
body
    height 100%

body
    min-height 700px

.wrapper
    // min-height 100%
    height 100%

.logo
    width 138px
    height 138px
    position absolute
    left 50%
    margin 0 0 0 -69px
    z-index 10
    top 10%
    borderbox()
    border 3px solid #000
    radius(90px)
    font-family Nunito
    font-weight bold
    font-size 27px
    text-align center
    color #000
    text-transform uppercase
    letter-spacing 1px
    padding 47px 0 0 0
    line-height 24px

.center
    text-align center
    width 400px
    height 192px
    position absolute
    top 50%
    left 50%
    margin -96px 0 0 -200px
    z-index 10
    em
        font-family Pacifico
        font-style normal
        font-size 25px
        display block
    
    strong
        display block
        margin -6px 0 27px 0
        font-family Nunito
        text-transform uppercase
        letter-spacing 1px
        font-size 32px
        line-height 38px

    .write_us
        font-family Lato
        line-height 26px
        b
            text-transform uppercase
            font-weight normal
            letter-spacing 1px
            font-size 14px
            display block

        a
            font-size 21px
            color #0080ff
            text-decoration underline

        a:hover
            text-decoration none



.plan
    &--sun
        
        &:before
            top auto !important
            bottom 400px !important
            left 210px !important


.footer_link
    position absolute
    bottom 8%
    left 0
    z-index 10
    width 100%
    text-align center
    font-size 16px
    font-family Lato, sans-serif

    li
        margin 7px 0

    a
        color #000

    a:hover
        color #0080ff


.popup
    display none
    width 100%
    // height 100%
    position absolute
    top 0
    left 0
    // bottom 0
    right 0
    background #fff
    z-index 1000
    overflow auto

    &--close
        ibreset()
        position absolute
        top 10px
        right 20px
        font-size 50px
        font-weight bold
        font-family Arial
        color #999
        cursor pointer

        &:hover
            color #000

    &--text
        width 1000px
        margin 0 auto
        font-family Lato
        font-size 16px
        padding 0 0 30px


        a
            color #0080ff

        p
          line-height 1.5rem
          margin-top 1.5rem
          margin-bottom 0
        
        ul
            list-style-type disc
            margin 0 0 0 20px

        dl
            dd
                margin 0 0 0 20px

        ul,
        ol
          margin-top 1.5rem
          margin-bottom 1.5rem

        ul li,
        ol li
          line-height 1.5rem

        ul ul,
        ol ul,
        ul ol,
        ol ol
          margin-top 0
          margin-bottom 0

        blockquote
          line-height 1.5rem
          margin-top 1.5rem
          margin-bottom 1.5rem

        h1,
        h2,
        h3,
        h4,
        h5,
        h6
          font-family Lato, sans-serif
          margin-top 2rem
          margin-bottom 0
          line-height 1.5rem

        h1
          font-size 4.242rem
          line-height 4.5rem
          margin-top 3rem

        h2
          font-size 2.828rem
          line-height 3rem
          margin-top 3rem

        h3
          font-size 26px

        h4
          font-size 0.707rem

        h5
          font-size 0.4713333333333333rem

        h6
          font-size 0.3535rem

        table
          margin-top 1.5rem
          border-spacing 0px
          border-collapse collapse

        table td,
        table th
          padding 0
          line-height 33px

        code
          vertical-align bottom

        .lead
          font-size 1.414rem

        .hug
          margin-top 0


.cart
	padding 55px 0
	position relative
	z-index 10

	&--in
		borderbox()
		background #fff

	&--header
		border-bottom 1px solid #cccccc
		padding 21px 0 18px 18px

		ul
			clearfix()

			li
				float left
				font-family 'Helvetica Neue', Arial, sans-serif
				font-weight bold
				text-transform uppercase
				font-size 12px
				letter-spacing 2px
				color #8d95a1

			li.m-1
				width 133px
			li.m-2
				width 533px
			li.m-3
				width 162px
			li.m-4
				width 137px	

	&--list
		padding 0 18px

		&--item
			
			&
				border-top 1px solid #e5e5e5
				clearfix()
				padding 18px 0

				figure
					width 112px
					height 112px
					float left
					margin 0 20px 0 0
					img
						display block
						

					a
						width 112px
						height 112px
						display block
						border 1px solid #e5e5e5

					a:hover
						border-color $blue

				&--descr
					float left
					padding 20px 0 0 0
					width 480px
					margin 0 17px 0 0
					h3
						font-size 24px
						font-family 'Droid Sans Bold'
						margin 0 0 11px

						a
							color $dark_blue

						a:hover
							color $blue

					p
						font-family 'Circe-Light'
						font-size 14px
						line-height 17px

				&--amount
					padding 32px 0 0 0
					width 196px
					float left
					&--dec
					&--inc
						ibreset()
						display block
						width 27px
						height 27px
						position relative
						float left
						text-indent -9999px
						cursor pointer
						opacity .4
						margin-top 12px

						&:before
							width 13px
							height 13px
							content ''
							position absolute
							top 7px
							left 7px
							background url('./i/cart-amount-btn.gif') no-repeat


					&--dec:hover
					&--inc:hover
						opacity .7

					&--dec[disabled]:hover
						opacity .4
						cursor default

					&--dec
						margin-right 7px
					&--inc
						margin-left 7px
						&:before
							background-position -13px 0

					&--input
						float left
						ibreset()
						border 2px solid #e6e6e6
						font-family 'Droid Sans'
						font-size 24px
						color $dark_blue
						text-align center
						borderbox()
						width 76px
						radius(28px)
						padding 8px 0 7px

				&--price
					font-size 24px
					font-family 'Droid Sans Bold'
					color #c629ff
					padding 45px 0 0 0
						
			&.m-removed
				opacity .4
				// .cart--list--item--amount--dec
				// 	display none
			
			&:first-child
				border 0

	&--form
		&--footer
			border-top 1px solid #cccccc
			padding 24px 0 26px 0
			clearfix()

			&--col
				float left

			&--col.m-left
				width 846px
				text-align right
				borderbox()
				padding-right 85px


			.cl-btn
				shadow(0 4px 0 #e6e6e6)

		&--total
			padding 8px 0 0 0
			dt
				font-family 'Helvetica Neue', Arial, sans-serif
				font-weight bold
				text-transform uppercase
				font-size 12px
				letter-spacing 2px
				color #8d95a1
				margin 0 0 5px

			dd
				font-size 24px
				font-family 'Droid Sans Bold'
				margin 0 0 0 -2px
				color #c629ff
